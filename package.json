{
  "name": "badgerandbear",
  "version": "0.0.1",
  "description": "badgerandbear.shop website",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/icon-font-basic.css css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 20 versions' css/style.concat.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markstanden/badgerandbear.git"
  },
  "author": "Mark Standen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/markstanden/badgerandbear/issues"
  },
  "homepage": "https://github.com/markstanden/badgerandbear#readme",
  "devDependencies": {
    "autoprefixer": "^9.8.2",
    "concat": "^1.0.3",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1"
  },
  "dependencies": {
    "live-server": "^1.2.1"
  }
}
